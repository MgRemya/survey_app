<h1>Available Surveys</h1>

<% @surveys.each do |survey| %>
  <div style="padding: 12px; margin-bottom: 16px; border: 1px solid #ccc; border-radius: 6px;">
    <h2><%= survey.title %></h2>
    <p><%= survey.description %></p>
    <%= link_to "Attempt Survey", attempt_survey_path(survey),
                style: "padding: 8px 12px; background: #007bff; color: white; border-radius: 4px; text-decoration: none;" %>
  </div>
<% end %>
