
<h1>Login</h1>

<%= form_with url: login_path, method: :post do %>
  <div>
    <%= label_tag :email %><br>
    <%= text_field_tag :email, params[:email], required: true %>
  </div>

  <div>
    <%= label_tag :password %><br>
    <%= password_field_tag :password, nil, required: true %>
  </div>

  <%= submit_tag "Log in" %>
<% end %>

<% if flash[:alert] %>
  <p style="color: red;"><%= flash[:alert] %></p>
<% end %>

