<div style="max-width: 400px; margin: 80px auto; padding: 30px; background: #f9f9f9; border-radius: 10px; box-shadow: 0 0 15px rgba(0,0,0,0.1);">
  <h2 style="text-align: center; margin-bottom: 24px;">Login</h2>
  <div style="text-align: center; margin-bottom: 30px;">

  <img src="<%= asset_path('download.jpeg') %>" alt="Survey App Logo" style="height: 80px; margin-bottom: 10px;">
  <h1 style="margin: 0; font-size: 26px; color: #333;">Survey App</h1>
</div>


  <%= form_with url: login_path, method: :post, local: true do |f| %>
    <div style="margin-bottom: 16px;">
      <%= f.label :email, style: "display: block; font-weight: bold;" %>
      <%= f.email_field :email, autofocus: true, required: true, style: "width: 100%; padding: 10px; border-radius: 6px; border: 1px solid #ccc;" %>
    </div>

    <div style="margin-bottom: 20px;">
      <%= f.label :password, style: "display: block; font-weight: bold;" %>
      <%= f.password_field :password, required: true, style: "width: 100%; padding: 10px; border-radius: 6px; border: 1px solid #ccc;" %>
    </div>

    <%= f.submit "Login", style: "width: 100%; padding: 10px; background-color: #007bff; color: white; border: none; border-radius: 6px;" %>
  <% end %>

  <% if flash[:alert] %>
    <p style="color: red; margin-top: 12px; text-align: center;"><%= flash[:alert] %></p>
  <% end %>
</div>
