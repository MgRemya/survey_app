<%= form_with(model: [ :admin, survey, category ], local: true) do |f| %>
    <% if category.errors.any? %>
      <div style="color: red;">
        <h4><%= pluralize(category.errors.count, "error") %> prevented saving:</h4>
        <ul>
          <% category.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div style="margin-bottom: 12px;">
      <%= f.label :name, "Category Name", style: "display: block;" %>
      <%= f.text_field :name, style: "width: 100%; padding: 8px;" %>
    </div>
  
    <%= f.submit "Save Category", style: "padding: 8px 16px; background: #007bff; color: white; border: none; border-radius: 4px;" %>
  <% end %>
  