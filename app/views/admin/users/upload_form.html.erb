<div style="max-width: 500px; margin: 40px auto; padding: 30px; background-color: #f9f9f9; border-radius: 10px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
  <h3 style="margin-bottom: 20px; text-align: center;">ðŸ“¤ Upload Users via CSV</h3>

  <%= form_with url: admin_users_upload_csv_path, local: true, multipart: true do |f| %>
    <div style="margin-bottom: 20px;">
      <label for="file" style="display: block; font-weight: bold; margin-bottom: 6px;">Choose CSV File</label>
      <%= file_field_tag :file, accept: '.csv', class: "form-control", required: true, style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" %>
    </div>

    <div style="text-align: center;">
      <%= submit_tag "Upload CSV", class: "btn btn-primary", style: "padding: 10px 20px; background-color: #007bff; color: white; border: none; border-radius: 5px; font-weight: bold;" %>
    </div>
  <% end %>
</div>
