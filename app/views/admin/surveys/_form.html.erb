<%= form_with(model: [:admin, survey], local: true) do |f| %>
    <% if survey.errors.any? %>
      <div style="color: red; margin-bottom: 12px;">
        <h3><%= pluralize(survey.errors.count, "error") %> prevented saving:</h3>
        <ul>
          <% survey.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div style="margin-bottom: 12px;">
      <%= f.label :title, style: "display:block;" %>
      <%= f.text_field :title, style: "width: 100%; padding: 8px;" %>
    </div>
  
    <div style="margin-bottom: 12px;">
      <%= f.label :description, style: "display:block;" %>
      <%= f.text_area :description, rows: 4, style: "width: 100%; padding: 8px;" %>
    </div>
  
    <%= f.submit class: "btn", style: "padding: 8px 16px; background-color: #007bff; color: white; border: none; border-radius: 4px;" %>
  <% end %>
  