<%= form_with(model: [ :admin, survey, category, question ], local: true) do |f| %>
    <% if question.errors.any? %>
      <div style="color: red;">
        <h4><%= pluralize(question.errors.count, "error") %> prevented saving:</h4>
        <ul>
          <% question.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div style="margin-bottom: 12px;">
      <%= f.label :content, "Question", style: "display: block;" %>
      <%= f.text_area :content, rows: 3, style: "width: 100%; padding: 8px;" %>
    </div>
  
    <%= f.submit "Save Question", style: "padding: 8px 16px; background: #007bff; color: white; border: none; border-radius: 4px;" %>
  <% end %>
  